<div class="row">
  <%= form_for(@order) do |f| %>
    <div class="col-md-6">
      <% if @order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
            <ul>
              <% @order.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div id="selector-div" class="col-md-6">
        <% if @products.present? %>
            Search Products:<%= select_tag "products", options_for_select(@products.try(:collect) { |u| [u.product_name, "#{u.id}:#{u.product_name}:#{u.sale_price.to_s}: #{u.quantity}"]}), {:id =>"chosen-select",class: 'asdasd',  multiple: 'multiple' ,autofocus: true} %>
        <% end %>
      </div>
      <div>
        <%= render :partial => 'added_products' , class: 'col-md-12'%>
      </div>

      <%= f.fields_for :order_products do |order_product_form| %>
        <p>
          <%= order_product_form.text_field :product_id  %>
        </p>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="col-md-12">
        <table  class="table table-striped "  style="font-size:84px" >

          <td style="background-color: rgb(0,221,147);color: white"><h3>Total </h3></td>
          <td style="background-color: rgb(0,221,147);color: white ;text-align: right"><h3 id="total_amount">0.0</h3></td>
          <tbody>

          <tr>
            <td>Gross Amount</td>
            <td class="gross_amount" style=" text-align: right"> 0 </td>
          </tr>

          <tr>
            <td>Discount%</td>
            <td style=" text-align: right">
              <input type="text" name="order[discount]" id="discount_percentage" style="width: 50px;">
            </td>
          </tr>

          <tr>
            <td>Total Discount</td>
            <td id="discount_amount" style=" text-align: right"> 0 </td>
          </tr>

          <tr>
            <td>Net Amount</td>
            <td id="net_amount" style=" text-align: right"> 0 </td>
          </tr>
          </tbody>
        </table>
        <a style="border-radius: 0px;background-color: rgb(0,221,147)" class="btn btn-block col-md-12"> Print </a>
        <div class="row">
          <div class="col-md-4">
            <%= f.submit 'Save', :class => 'btn btn-primary ' %>
          </div>
          <div class="col-md-3">
            <a style="border-radius: 0px; float: left;" class="btn btn-default">&nbsp;Cancel&nbsp;</a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
