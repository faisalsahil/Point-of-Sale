<p id="notice"><%= notice %></p>
<dl class="dl-horizontal">
  <dt>Order number:</dt>
  <dd><%#= @order.order_number %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Order date:</dt>
  <dd><%= @order.order_date %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Order type:</dt>
  <dd><%= @order.order_type %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Location:</dt>
  <dd><%=  %></dd>
</dl>

<% if @order.order_products.any? %>
  <br/>
  <h4><strong>Products</strong></h4>
  <table class="table">
    <thead>
      <th> Name </th>
      <th> Sale Price </th>
      <th> Quantity </th>
      <th> Total Price </th>
    </thead>
    <tbody>
      <% @order.order_products.try(:each) do |op| %>
        <tr>
          <td>
            <strong><%= op.product_name %></strong>
          </td>
          <td>
            <%= op.unit_price %>
          </td>
          <td>
            <%= op.quantity %>
          </td>
          <td>
            <%= op.total_price %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<table class="table table-striped">
  <thead>
    <th></th>
    <th>Name</th>
    <th>Qnty</th>
  </thead>
  <tbody>
    <% @order.order_products.each do |order_product| %>
      <tr>
        <td>

          <%= link_to '', order_product_path(order_product), method: :delete, class: 'glyphicon glyphicon-remove-circle', autofocus: true %>
        </td>
        <td><%= order_product.product.product_name %></td>
        <td><%= order_product.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'print', 'javascript:void(0);', class: 'take-print' %> |
<%= link_to 'Generate PDF', order_path(@order, {format: :pdf}) %> |
<%= link_to 'Back', orders_path %>
