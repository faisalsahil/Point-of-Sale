<div class="row">
  <div class="col-md-6">
    <%= form_for(@order) do |f| %>
      <%= hidden_field_tag "order_id", @order.id %>
        <% if @order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
            <ul>
              <% @order.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% if !@order.new_record? %>
          <%= f.label :order_id  %><br>
          <%=  @order.id %>
        <% end%>
    <% end %>
  </div>
    <table class="table table-striped table-bordered ">
      <thead>
        <tr style="background-color: rgb(0,221,147);color: white;  font-family: Arial ;  font-size: 14px">
          <th>Product Name</th>
          <th>Sale Price</th>
          <th>Total Price</th>
          <th>Discount</th>
          <th>Quantity</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      	<% @order_products.each do |order_product| %>
          <tr>
      	    <% @product = Product.find_by_id(order_product.product_id) %>
      	    <% @order = Order.find_by_id(order_product.order_id) %>
      	    <% price = @product.sale_price %>
      	    <% quantity = order_product.quantity %>
      	    <% discount = @order.discount %>

      	    <td>  <%= @product.product_name %>  </td>
      	    <td>  <%= price %>  </td>
      	    <td>  <%= ((price*quantity)-(((price*quantity)*discount)/100)) %>  </td>
      	    <td>  <%= discount %>  </td>
      	    <td>  <%= quantity %>  </td>
      	    <td>  <%= link_to 'Destroy', order_product, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      	  </tr>
      	<% end %>
      </tbody>
    </table>
</div>