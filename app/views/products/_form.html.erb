<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :product_name %><br>
            <%= f.text_field :product_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :purchase_price %><br>
            <%= f.number_field :purchase_price %>
          </div>
          <div class="field">
            <%= f.label :sale_price %><br>
            <%= f.number_field :sale_price %>
          </div>
          <div class="field">
            <%= f.label :quantity %><br>
            <%= f.number_field :quantity %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="field">
            <%= f.label :expiry_date %><br>
            <%= f.text_field :expiry_date, class: "datepicker", value: Date.today.strftime('%d/%m/%Y') %>
          </div>
          <div class="field">
            <%= f.label :product_description %><br>
            <%= f.text_area :product_description, size:'50x5' %>
          </div>
          <div class="actions">
            <%= f.submit  class:'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
