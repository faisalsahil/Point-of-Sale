<div class="row">
  <div class="col-md-6">
    <h3>Products</h3>
  </div>
  <div class="col-md-6">
    <%= link_to 'Download CSV', download_products_path({format: 'csv'}) , class: 'btn btn-mini btn-default pull-right', style: 'margin-top:2%;' %>
    <%= link_to 'New product', new_product_path , class: 'btn btn-mini btn-success pull-right', style: 'margin-top:2%;' %>
  </div>
</div>


<table class="table table-striped list_data_table">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Purchase price</th>
      <th>Sale price</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.purchase_price %></td>
        <td><%= product.sale_price %></td>
        <td><%= product.quantity %></td>
        <td>
          <%= link_to '', product, class: 'fa fa-eye' %>
          <%= link_to '', edit_product_path(product), class: 'fa fa-edit' %>
          <%= link_to '', print_product_path(product), class: 'fa fa-download' %>
          <%#= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
