<h1>Listing purchase_order_products</h1>

<table>
  <thead>
    <tr>
      <th>Purchase order</th>
      <th>Current stock</th>
      <th>Purchase quantity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_products.each do |purchase_order_product| %>
      <tr>
        <td><%= purchase_order_product.purchase_order_id %></td>
        <td><%= purchase_order_product.current_stock %></td>
        <td><%= purchase_order_product.purchase_quantity %></td>
        <td><%= link_to 'Show', purchase_order_product %></td>
        <td><%= link_to 'Edit', edit_purchase_order_product_path(purchase_order_product) %></td>
        <td><%= link_to 'Destroy', purchase_order_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

