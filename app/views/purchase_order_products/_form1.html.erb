<%#= form_for :purchase_order_product do |f| %>
<%=    form_for @purchase_order_product, url: edit_purchase_order_purchase_order_products_path(@purchase_order_product), method: :get do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class ="hidden">
      <%= f.label :purchase_order_id %> <br/>
      <%= f.hidden_field :purchase_order_id, :value => @purchase_order.id%>
    </div>
    <div class="hidden">
      <%= f.label :current_stock %> <br/>
      <%= f.hidden_field :current_stock,:value => 0 %>
    </div>
    <div class="field">
      <%= f.label :purchase_quantity %><br>
      <%= f.number_field :purchase_quantity %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>